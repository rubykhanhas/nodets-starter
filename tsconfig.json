{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "allowJs": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}